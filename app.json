{
    "name": "ContactOtter",
    "website": "https://www.contactotter.com",
    "repository": "https://github.com/phildini/logtacts/",
    "scripts": {
        "postdeploy": "python manage.py migrate --settings=logtacts.prod_settings"
    },
    "env": {
        "BONSAI_URL": {
            "required": true
        },
        "EMAIL_PASSWORD": {
            "required": true
        },
        "LOGTACTS_SECRET_KEY": {
            "required": true,
            "generator": "secret"
        },
        "RECAPTCHA_PRIVATE_KEY": {
            "required": true
        },
        "RECAPTCHA_PUBLIC_KEY": {
            "required": true
        },
        "OPBEAT_APP_ID": {
            "required": true
        },
        "OPBEAT_ORG_ID": {
            "required": true
        },
        "OPBEAT_SECRET_KEY": {
            "required": true
        },
        "SEARCH_INDEX": {
            "required": true
        },
        "SLACK_WEBHOOK_URL": {
            "required": true
        }
    },
    "formation": {
        "worker": {
            "quantity": 1,
            "size": "hobby"
        },
        "web": {
            "quantity": 1,
            "size": "hobby"
        },
        "webworker": {
            "quantity": 1,
            "size": "hobby"
        }
    },
    "addons": [
        "heroku-redis",
        "heroku-postgresql",
        {
            "plan": "papertrail:choklad"
        }
    ],
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ]
}
